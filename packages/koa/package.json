{
  "name": "koa-template",
  "version": "0.1.0",
  "description": "koa template for graphql api",
  "main": "index.js",
  "scripts": {
    "pretest": "node -r ts-node/register node_modules/.bin/typeorm migration:run",
    "posttest": "nyc report --reporter=json && codecov -f coverage/*.json",
    "test": "copyfiles src/api/graphql/types/** build && tsc && nyc ava",
    "lint": "tslint **/*.ts",
    "start": "ts-node src/index.ts",
    "clean": "rm -rf build && rm -rf node_modules"
  },
  "dependencies": {
    "apollo-server-koa": "^2.0.6",
    "bcrypt": "^3.0.0",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.1.1",
    "koa": "^2.5.2",
    "koa-bodyparser": "^4.2.1",
    "koa-cache-control": "^2.0.0",
    "koa-compose": "^4.1.0",
    "koa-router": "^7.4.0",
    "merge-graphql-schemas": "^1.5.3",
    "pg": "^7.4.3",
    "ramda": "^0.25.0",
    "reflect-metadata": "^0.1.10",
    "typeorm": "0.2.15"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chance": "^1.0.1",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-cache-control": "^2.0.1",
    "@types/koa-router": "^7.0.31",
    "@types/node": "^10.11.5",
    "@types/ramda": "^0.26.0",
    "@types/superagent": "^3.8.3",
    "@types/supertest": "^2.0.5",
    "ava": "^0.25.0",
    "chance": "^1.0.16",
    "codecov": "^3.1.0",
    "copyfiles": "^2.0.0",
    "nyc": "^13.0.1",
    "supertest": "^3.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-microsoft-contrib": "^5.1.0",
    "tsutils": "^3.0.0",
    "typescript": "^3.0.1"
  },
  "keywords": [
    "koa",
    "typescript",
    "graphql"
  ],
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "author": "Arjay Sitoy <sitoy.arjay@gmail.com>",
  "license": "MIT"
}
